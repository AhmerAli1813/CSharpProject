
@model EmpView

@{
    string action; 
    if (Model.employees == null || Model.employees.EId==0){
        action = "Create";
    }else{
        action = "Update";
    }
    ViewData["Title"] = action;
}
 
<h1>@action</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="employees.EId"/>
            <div class="form-group">
                <label asp-for="employees.Username" class="control-label"></label>
                <input asp-for="employees.Username" class="form-control" />
                <span asp-validation-for="employees.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employees.Name" class="control-label"></label>
                <input asp-for="employees.Name" class="form-control" />
                <span asp-validation-for="employees.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employees.Password" class="control-label"></label>
                <input asp-for="employees.Password" class="form-control" />
                <span asp-validation-for="employees.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employees.ConfirmPassword" class="control-label"></label>
                <input asp-for="employees.ConfirmPassword" class="form-control" />
                <span asp-validation-for="employees.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employees.JoinDate" class="control-label"></label>
                <input asp-for="employees.JoinDate" class="form-control" />
                <span asp-validation-for="employees.JoinDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@action" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
