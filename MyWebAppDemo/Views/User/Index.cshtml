@model IEnumerable<userModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container ">
    <div class="row">
        <div class="col-6 text-start">User List</div>
         <div class="col-6 text-end"> <a asp-action="Create" class="btn btn-success" asp-controller="User">Add User</a></div>
    </div>
</div>

<table  class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Name

            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>Action</th>
        </tr>

    </thead>

    <tbody>
        
        @foreach (var item in Model){
            var sno =1;
            <tr>
            <td>
               @sno
            </td>
                <td>
                    @item.Name
                </td>
                
                <td>
                    @item.Username
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="User" asp-route-id="@item.ID">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="User" asp-route-id="@item.ID">Delete</a>
                </td>
        </tr>
        sno++;
        }
    </tbody>
</table>